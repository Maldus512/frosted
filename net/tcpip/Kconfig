if CONFIG_TCPIP

config CONFIG_PICOTCP_IPV4
    bool "Support IP version 4"
    default y

config CONFIG_PICOTCP_IPV6
    bool "Support IP version 6"
    default n

config CONFIG_PICOTCP_DEVLOOP
    bool "Support loopback device"
    default y

config CONFIG_PICOTCP_ETH
    depends on CONFIG_PICOTCP_IPV4
    bool "Support for ARP (IPv4 neighbor discovery)"
    default n

config CONFIG_PICOTCP_TCP
    depends on CONFIG_PICOTCP_IPV4 || CONFIG_PICOTCP_IPV6
    bool "Support TCP socket communication"
    default y

config CONFIG_PICOTCP_UDP
    depends on CONFIG_PICOTCP_IPV4 || CONFIG_PICOTCP_IPV6
    bool "Support UDP socket communication"
    default y

config CONFIG_PICOTCP_MULTICAST
    depends on CONFIG_PICOTCP_IPV4
    bool "Support IPv4 Fragmentation"
    default n

config CONFIG_PICOTCP_NAT
    depends on CONFIG_PICOTCP_IPV4
    bool "Support IPv4 Network Address Translation (NAT)"
    default n

config CONFIG_PICOTCP_ICMP4
    depends on CONFIG_PICOTCP_IPV4
    bool "Support for ICMP over IPv4"
    default y

config CONFIG_PICOTCP_DNS_CLIENT
    depends on PICOTCP_UDP
    bool "DNS client for dynamic name resolution"
    default n

endif
    
